<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radioGroupHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">

        <com.goldenasia.lottery.component.DrawableLeftRadioButton
            android:id="@+id/lotteryRadioButton"
            style="@style/drawableRadioButton"
            android:drawableLeft="@drawable/selector_radio_lottery"
            android:layout_weight="0.9"
            android:text="彩票" />

        <com.goldenasia.lottery.component.DrawableLeftRadioButton
            android:id="@+id/gaRadioButton"
            style="@style/drawableRadioButton"
            android:layout_weight="1.1"
            android:drawableLeft="@drawable/selector_radio_ga"
            android:text="电子游戏" />

        <com.goldenasia.lottery.component.DrawableLeftRadioButton
            android:id="@+id/agRadioButton"
            style="@style/drawableRadioButton"
            android:drawableLeft="@drawable/selector_radio_ag"
            android:layout_weight="0.9"
            android:text="AG真人" />

        <com.goldenasia.lottery.component.DrawableLeftRadioButton
            android:id="@+id/sbRadioButton"
            style="@style/drawableRadioButton"
            android:drawableLeft="@drawable/selector_radio_sb"
            android:layout_weight="1.1"
            android:text="沙巴体育"
       />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

</LinearLayout>