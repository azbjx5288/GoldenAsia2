<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/border_frame_gray"
        android:gravity="center"
        android:text="若要绑定银行卡，请先完善您的安全资料"
        android:textSize="16dp"
        android:visibility="gone" />

    <View style="@style/horizontal_divide_line"></View>

    <ListView
        android:id="@+id/bindcard_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/text_shallow"
        android:layout_below="@id/tip"
        android:dividerHeight="1dp"
        android:layout_weight="1"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="6dp">

        <Button
            android:id="@+id/perfectbut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_type"
            android:text="完善安全资料"
            android:visibility="gone" />

        <Button
            android:id="@+id/add_bankcardbut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_type"
            android:text="添加银行卡" />

    </LinearLayout>

</RelativeLayout>
