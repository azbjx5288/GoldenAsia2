<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"></RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/yilou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:button="@null"
            android:drawableLeft="@drawable/lengre_selector"
            android:drawableRight="@drawable/checkbox_login_bg_selector"
            android:drawablePadding="5dp"
            android:layout_marginRight="20dp"
            android:text="遗漏"
            android:textColor="@color/orders_color"
            android:textSize="14sp" />

        <!--<CheckBox
            android:id="@+id/yilou_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/yilou"
            android:button="@drawable/checkbox_login_bg_selector" />-->

        <CheckBox
            android:id="@+id/lengre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/yilou"
            android:drawableLeft="@drawable/yilou_selector"
            android:drawableRight="@drawable/checkbox_login_bg_selector"
            android:button="@null"
            android:drawablePadding="5dp"
            android:text="冷热"
            android:textColor="@color/orders_color"
            android:textSize="14sp" />

       <!--<CheckBox
            android:id="@+id/lengre_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/lengre"
            android:button="@drawable/checkbox_login_bg_selector" />-->

    </RelativeLayout>

</LinearLayout>