<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/app_main">
        <ImageButton
            android:id="@android:id/home"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/auto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/help"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="自动刮开"
            android:textColor="@color/selector_ggc_auto"
            android:textSize="15sp"
        />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/base"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <ImageView
                android:id="@+id/left_base"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginLeft="32.5dp"
                android:layout_marginTop="110dp"/>

            <ImageView
                android:id="@+id/right_base"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32.5dp"
                android:layout_marginTop="110dp"/>

            <LinearLayout
                android:id="@+id/prize_base"
                android:layout_width="182dp"
                android:layout_height="53dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="215dp"
                android:orientation="horizontal"/>

            <GridView
                android:id="@+id/my_base"
                android:layout_width="303dp"
                android:layout_height="201dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="310dp"
                android:numColumns="5"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <com.goldenasia.lottery.component.EraseView
                android:id="@+id/left_pic"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginLeft="32.5dp"
                android:layout_marginTop="110dp"/>

            <com.goldenasia.lottery.component.EraseView
                android:id="@+id/right_pic"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32.5dp"
                android:layout_marginTop="110dp"/>

            <com.goldenasia.lottery.component.EraseView
                android:id="@+id/prize_code"
                android:layout_width="182dp"
                android:layout_height="53dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="215dp"/>

            <com.goldenasia.lottery.component.EraseView
                android:id="@+id/my_code"
                android:layout_width="303dp"
                android:layout_height="201dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="310dp"/>
            <TextView
                android:id="@+id/toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:gravity="center"
                android:textColor="@color/lhc_red"
                android:textSize="17.5sp"/>

        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
