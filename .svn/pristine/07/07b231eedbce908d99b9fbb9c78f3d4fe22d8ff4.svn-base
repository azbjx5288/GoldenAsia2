<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_main_background"
                android:padding="@dimen/pad_lr">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:minHeight="45dp"
        android:minWidth="45dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/pad_lr"
        android:layout_marginStart="@dimen/pad_lr"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:maxLines="1"
        android:text="彩种名称"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_size_small"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="5dp"
        android:text="描述"
        android:textSize="@dimen/text_size_tiny"/>
    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="人在玩"
        android:visibility="gone"
        android:textSize="@dimen/text_size_tiny"/>
    <TextView
        android:id="@+id/play"
        android:layout_width="62.5dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/app_main"
        android:gravity="center"
        android:text="开始游戏"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"/>
    <TextView
        android:id="@+id/player_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/label"
        android:layout_toStartOf="@+id/label"
        android:text="0"
        android:visibility="gone"
        android:textColor="@color/app_main_support"
        android:textSize="@dimen/text_size_tiny"/>
    <TextView
        android:id="@+id/trial"
        android:layout_width="62.5dp"
        android:layout_height="20dp" android:layout_alignLeft="@+id/play" android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" android:layout_alignStart="@+id/play" android:layout_alignTop="@+id/desc"
        android:text="免费试玩"
        android:background="@drawable/border_frame"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_small"/>
</RelativeLayout>

