<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">

        <shape >

            <solid android:color="@color/app_main" />

            <corners android:radius="5dp" />
        </shape>

    </item>

    <item >

        <shape >

            <solid android:color="@color/app_item_background" />

            <stroke
                android:width="0.5dp"
                android:color="@color/app_main_rim" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>