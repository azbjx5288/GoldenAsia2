<?xml version="1.0" encoding="utf-8"?>
<com.cpiz.android.bubbleview.BubbleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_bubble"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:textColor="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"
            android:text="模式:"/>

        <RadioGroup
            android:id="@+id/lucremode_sett"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/lucremode_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/background_round_button_select"
                android:textColor="@drawable/general_button_text_color"
                android:button="@null"
                android:checked="true"
                android:text="元" />

            <RadioButton
                android:id="@+id/lucremode_jiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/background_round_button_select"
                android:button="@null"
                android:textColor="@drawable/general_button_text_color"
                android:text="角" />

            <RadioButton
                android:id="@+id/lucremode_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/background_round_button_select"
                android:textColor="@drawable/general_button_text_color"
                android:button="@null"
                android:text="分" />

            <RadioButton
                android:id="@+id/lucremode_li"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_round_button_select"
                android:textColor="@drawable/general_button_text_color"
                android:button="@null"
                android:text="厘" />

        </RadioGroup>
    </LinearLayout>
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="奖金:"/>
        <Spinner
            android:id="@+id/bonus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/languages"/>
    </LinearLayout>-->

</com.cpiz.android.bubbleview.BubbleLinearLayout>