<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pick_column_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="48dp">

        <TextView
            android:id="@+id/pick_column_title"
            style="@style/pick_column_style"
            android:layout_marginLeft="24dp"
            android:background="@drawable/digit_tab"
            android:text="@string/is_ssc_shi_title" />

        <LinearLayout
            android:id="@+id/pick_column_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            >

            <Button
                android:id="@+id/sdklpk_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全"
                android:textColor="@drawable/pink_number_button_text_color"
                android:textSize="15sp"
                android:background="@null"/>

            <Button
                android:id="@+id/sdklpk_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/pink_number_button_text_color"
                android:textSize="15sp"
                android:background="@null"
                android:text="清" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pick_column_area"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/image_01_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_sz_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_a23"
            android:tag="A23" />

        <ImageView
            android:id="@+id/image_01_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/sdklpk_sz_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_234"
            android:tag="234" />
        <ImageView
            android:id="@+id/image_01_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_sz_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_345"
            android:tag="345" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_2_1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/image_01_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_sz_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_456"
            android:tag="456" />
        <ImageView
            android:id="@+id/image_01_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/sdklpk_sz_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_567"
            android:tag="567" />

        <ImageView
            android:id="@+id/image_01_06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_sz_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_678"
            android:tag="678" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_2_2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/image_01_07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_sz_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_789"
            android:tag="789" />
        <ImageView
            android:id="@+id/image_01_08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/sdklpk_sz_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_8910"
            android:tag="8910" />

        <ImageView
            android:id="@+id/image_01_09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_sz_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_910j"
            android:tag="910J" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_2_3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/image_01_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_sz_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_10jq"
            android:tag="10JQ" />
        <ImageView
            android:id="@+id/image_01_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/sdklpk_sz_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/jqk"
            android:tag="JQK" />

        <ImageView
            android:id="@+id/image_01_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_sz_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/qka"
            android:tag="QKA" />



    </LinearLayout>

    <!--为了使ButterKnife加载图片时候不报错而添加的-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:id="@+id/image_01_13"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
    </LinearLayout>

</RelativeLayout>