<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/in_box_fragment"
        style="@style/tabUserItemLinearLayout">
        <ImageView
            android:id="@+id/in_box_text_img"
            android:src="@drawable/touzhu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/in_box_text"
            android:layout_width="wrap_content"
            style="@style/tabUserItemText"
            android:layout_marginLeft="15dp"
            android:text="收件箱"/>
        <ImageView
            android:id="@+id/tabUserItemTextArr"
            style="@style/tabUserItemImgArrow" />
    </RelativeLayout>

    <View style="@style/horizontal_divide_line" />


    <RelativeLayout
        android:id="@+id/out_box_fragment"
        style="@style/tabUserItemLinearLayout">
        <TextView
            style="@style/tabUserItemText"
            android:drawableLeft="@drawable/zhuihao_icon"
            android:text="发件箱"/>
        <ImageView style="@style/tabUserItemImgArrow" />
    </RelativeLayout>

    <View style="@style/horizontal_divide_line" />


    <RelativeLayout
        android:id="@+id/write_email_fragment"
        style="@style/tabUserItemLinearLayout">
        <TextView
            style="@style/tabUserItemText"
            android:drawableLeft="@drawable/report_icon"
            android:text="发邮件"/>
        <ImageView style="@style/tabUserItemImgArrow" />
    </RelativeLayout>

    <View
        android:id="@+id/game_reports_view"
        style="@style/horizontal_divide_line" />

</LinearLayout>


