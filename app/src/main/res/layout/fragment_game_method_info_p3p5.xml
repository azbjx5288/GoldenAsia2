<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:padding="20dp"
        android:orientation="vertical">

        <!--特码-->
        <LinearLayout
            android:id="@+id/te_ma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P3不定位"
                android:textColor="@color/app_font_dark_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/gray">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/game_method_info_padding"
                        android:layout_weight="191"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="一码不定位"
                        android:textColor="@color/app_font_dark_color"
                        android:textSize="14sp"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/game_method_info_padding"
                        android:layout_weight="470"
                        android:background="@color/white"
                        android:text="任选1个号码，开出号码前三位中包含该号码，顺序不限，即中奖。"
                        android:textColor="@color/app_font_dark_color"
                        android:textSize="12sp"
                        android:typeface="serif" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/game_method_info_padding"
                        android:layout_weight="191"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="二码不定位"
                        android:textColor="@color/app_font_dark_color"
                        android:textSize="14sp"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/game_method_info_padding"
                        android:layout_weight="470"
                        android:background="@color/white"
                        android:text="任选2个号码组成一注，开出号码前三位中包含所选的2个号码，顺序不限，即中奖。"
                        android:textColor="@color/app_font_dark_color"
                        android:textSize="12sp"
                        android:typeface="serif" />
                </TableRow>

            </TableLayout>


        </LinearLayout>

        <!--正码-->
        <LinearLayout
            android:id="@+id/zheng_ma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大小单双"
                android:textColor="@color/app_font_dark_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/game_method_info_padding"
                        android:layout_weight="191"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="前（后）二大小单双"
                        android:textColor="@color/app_font_dark_color"
                        android:textSize="14sp"
                        android:typeface="serif" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/game_method_info_padding"
                        android:layout_weight="470"
                        android:background="@color/white"
                        android:text="在万位和千位（十位和个位）上，各选择一种状态（大小单双）作为一注，当对应位置所选的状态与开奖号码相符，即中奖。 "
                        android:textColor="@color/app_font_dark_color"
                        android:textSize="12sp"
                        android:typeface="serif" />
                </TableRow>


            </TableLayout>


        </LinearLayout>

        <!--正特一肖-->
