<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/animal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pad_lr"
        android:layout_marginTop="18.5dp"
        android:layout_marginRight="@dimen/pad_lr"
        android:layout_marginBottom="@dimen/pad_ud"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/poultry"
            android:layout_width="0dp"
            android:layout_height="@dimen/small_blank"
            android:layout_marginRight="@dimen/pad_lr"
            android:layout_weight="1"
            android:background="@drawable/animal_button_selector"
            android:button="@null"
            android:gravity="center"
            android:text="家禽"
            android:textColor="@drawable/selector_lhc_sx_textcolor"
            android:textSize="@dimen/text_size_small" />

        <RadioButton
            android:id="@+id/beast"
            android:layout_width="0dp"
            android:layout_height="@dimen/small_blank"
            android:layout_weight="1"
            android:background="@drawable/animal_button_selector"
            android:button="@null"
            android:gravity="center"
            android:text="野兽"
            android:textColor="@drawable/selector_lhc_sx_textcolor"
            android:textSize="@dimen/text_size_small" />
    </RadioGroup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/lhc_sx_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

</LinearLayout>
