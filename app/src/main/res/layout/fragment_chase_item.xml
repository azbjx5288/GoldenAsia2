<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rec_button_un"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/chase_issue"
            style="@style/chase_item"
            android:minWidth="80dp"
            android:text="期号" />

        <View style="@style/verticalLine" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.goldenasia.lottery.component.QuantityView
                android:id="@+id/chase_multiple"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:qv_addButtonBackground="@drawable/quantityview_mmc_add_selector"
                app:qv_addButtonTextColor="@color/background"
                app:qv_quantity="1"
                app:qv_quantityBackground="@color/white"
                app:qv_quantityPadding="10dp"
                app:qv_removeButtonBackground="@drawable/quantityview_mmc_remove_selector"
                app:qv_removeButtonTextColor="@color/background" />

            <TextView
                android:id="@+id/chase_multiple_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/chase_item"/>
        </LinearLayout>

        <View style="@style/verticalLine" />

        <TextView
            android:id="@+id/chase_current"
            style="@style/chase_item"
            android:minWidth="90dp"
            android:text="" />

        <View style="@style/verticalLine" />

        <TextView
            android:id="@+id/chase_investput"
            style="@style/chase_item"
            android:minWidth="90dp"
            android:text="" />

        <View style="@style/verticalLine" />

        <TextView
            android:id="@+id/chase_deficit"
            style="@style/chase_item"
            android:minWidth="90dp"
            android:text="" />

        <View
            android:id="@+id/chase_deficit_line"
            style="@style/verticalLine" />

        <TextView
            android:id="@+id/chase_total"
            style="@style/chase_item"
            android:minWidth="90dp"
            android:text="合计利润"
            android:visibility="gone" />

        <View
            android:id="@+id/chase_total_line"
            style="@style/verticalLine"
            android:visibility="gone" />

        <TextView
            android:id="@+id/chase_interestrate"
            style="@style/chase_item"
            android:minWidth="90dp"
            android:text=""
            android:visibility="gone" />

        <View
            android:id="@+id/chase_interestrate_line"
            style="@style/verticalLine"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e2e2e2" />
</LinearLayout>