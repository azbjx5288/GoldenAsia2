<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pick_column_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="48dp">

        <TextView
            android:id="@+id/pick_column_title"
            style="@style/pick_column_style"
            android:layout_marginLeft="24dp"
            android:background="@drawable/digit_tab"
            android:text="@string/is_ssc_shi_title" />

        <LinearLayout
            android:id="@+id/pick_column_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            >

            <Button
                android:id="@+id/sdklpk_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全"
                android:textColor="@drawable/pink_number_button_text_color"
                android:textSize="15sp"
                android:background="@null"/>

            <Button
                android:id="@+id/sdklpk_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/pink_number_button_text_color"
                android:textSize="15sp"
                android:background="@null"
                android:text="清" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pick_column_area"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/image_01_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_bx_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_a"
            android:tag="A" />

        <ImageView
            android:id="@+id/image_01_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_bx_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:tag="2" />
        <ImageView
            android:id="@+id/image_01_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_bx_selector"
            android:clickable="true"
            android:padding="2dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/sdklpu_3"
            android:tag="3" />
        <ImageView
            android:id="@+id/image_01_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_bx_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_4"
            android:tag="4" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_2_1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/image_01_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_bx_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_5"
            android:tag="5" />

        <ImageView
            android:id="@+id/image_01_06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_bx_selector"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="2dp"
            android:src="@drawable/sdklpu_6"
            android:tag="6" />

        <ImageView
            android:id="@+id/image_01_07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_bx_selector"
            android:clickable="true"
            android:layout_marginRight="20dp"
            android:padding="2dp"
            android:src="@drawable/sdklpu_7"
            android:tag="7" />
        <ImageView
            android:id="@+id/image_01_08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_bx_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_8"
            android:tag="8" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_2_2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/image_01_09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_bx_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_9"
            android:tag="9" />
        <ImageView
            android:id="@+id/image_01_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_bx_selector"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="2dp"
            android:src="@drawable/sdklpu_10"
            android:tag="10" />
        <ImageView
            android:id="@+id/image_01_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_bx_selector"
            android:clickable="true"
            android:padding="2dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/sdklpu_j"
            android:tag="J" />

        <ImageView
            android:id="@+id/image_01_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_bx_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/q"
            android:tag="Q" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_2_3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/image_01_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sdklpk_bx_selector"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/sdklpu_k"
            android:tag="K" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sdklpu_k"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="invisible"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sdklpu_k"
            android:visibility="invisible"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@drawable/sdklpu_k"

            />

    </LinearLayout>

</RelativeLayout>