<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/code_column_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_frame"
        android:gravity="center"
        android:minHeight="59dp">

        <TextView android:id="@+id/issue_column_title"
            style="@style/pick_column_style"
            android:layout_gravity="center"
            android:text="期号"
            android:textColor="@color/app_font_ash_color"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/alloted"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>

