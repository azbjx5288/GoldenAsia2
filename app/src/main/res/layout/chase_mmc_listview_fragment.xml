<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:maxHeight="200dip"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_main"
        android:minHeight="100dp"
        >


        <ImageView
            android:id="@+id/imageView_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/exit_pressed" />

        <TextView
            android:id="@+id/tip_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_exit"
            android:layout_centerInParent="true"
            android:text="恭喜中奖 0 元"
            android:textColor="@color/text_shallow"
            android:textSize="36sp" />

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/winners_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/chase_win_listview"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="@color/text_shallow" />

        <LinearLayout
            android:id="@+id/mmc_below_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/background"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/positiveButton"
                style="@style/text_15_ffffff_sdw"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/notidialog_leftbtn_selector"
                android:gravity="center"
                android:text="@string/mmc_dialog_again" />

            <View
                android:id="@+id/alert_dialog_view"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <Button
                android:id="@+id/doubleButton"
                style="@style/text_15_ffffff_sdw"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/notidialog_rightbtn_selector"
                android:gravity="center"
                android:text="@string/mmc_dialog_double" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>


