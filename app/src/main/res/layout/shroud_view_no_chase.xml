<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="4dp"
              android:layout_marginTop="4dp"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投"/>

        <com.goldenasia.lottery.component.QuantityView
            android:id="@+id/double_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:qv_addButtonBackground="@drawable/quantityview_add_selector"
            app:qv_addButtonTextColor="@color/background"
            app:qv_quantity="1"
            app:qv_quantityBackground="@color/white"
            app:qv_removeButtonBackground="@drawable/quantityview_remove_selector"
            app:qv_removeButtonTextColor="@color/background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倍"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/lucremode_sett"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/lucremode_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_round_button_select"
                android:button="@null"
                android:checked="true"
                android:layout_marginRight="4dp"
                android:text="元"
                android:textColor="@drawable/mmc_currency_selector"/>

            <RadioButton
                android:id="@+id/lucremode_jiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/background_round_button_select"
                android:button="@null"
                android:text="角"
                android:textColor="@drawable/mmc_currency_selector"
            />

            <RadioButton
                android:id="@+id/lucremode_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_round_button_select"
                android:button="@null"
                android:layout_marginRight="4dp"
                android:text="分"
                android:textColor="@drawable/mmc_currency_selector"/>

            <RadioButton
                android:id="@+id/lucremode_li"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_round_button_select"
                android:button="@null"
                android:text="厘" />

        </RadioGroup>
    </LinearLayout>
</LinearLayout>
