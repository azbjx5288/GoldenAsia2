<?xml version="1.0" encoding="utf-8"?>
<com.goldenasia.lottery.pattern.LhcLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/lhc_sx_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pick_column_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/pick_column_control"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"></LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pick_column_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_special_complete_circle_defalut_ball_lhc"
            android:gravity="center"
            android:text="ç‹—"
            android:textColor="@color/app_main"
            android:textSize="@dimen/ball_text_size" />

        <com.goldenasia.lottery.view.LhcNumberGroupView
            android:id="@+id/pick_column_NumberGroupView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            app:checkedDrawable="@drawable/bg_special_complete_circle_choose_ball"
            app:chooseMode="false"
            app:column="5"
            app:itemSize="40dp"
            app:maxNumber="49"
            app:minNumber="1"
            app:numberStyle="false"
            app:textCheckedColor="@color/white"
            app:textColor="@color/app_main"
            app:textSize="18sp"
            app:uncheckedDrawable="@drawable/bg_special_complete_circle_defalut_ball"
            app:verticalGap="10dp" />
    </LinearLayout>
</com.goldenasia.lottery.pattern.LhcLayout>

