<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical">

    <CheckBox
        android:id="@+id/lengre_checked"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:checked="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"/>

    <CheckBox
        android:id="@+id/lengre"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/lengre_checked"
        android:layout_toStartOf="@+id/lengre_checked"
        android:button="@null"
        android:drawableLeft="@drawable/yilou_selector"
        android:drawablePadding="5dp"
        android:checked="true"
        android:text="100期冷热"
        android:textColor="@color/orders_color"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/yilou"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@+id/lengre"
        android:layout_alignBottom="@+id/lengre"
        android:layout_marginRight="35dp"
        android:layout_toLeftOf="@+id/lengre"
        android:layout_toStartOf="@+id/lengre"
        android:checked="true"
        android:button="@null"
        android:drawableLeft="@drawable/lengre_selector"
        android:drawablePadding="5dp"
        android:text="遗漏"
        android:textColor="@color/orders_color"
        android:textSize="16sp" />

</RelativeLayout>