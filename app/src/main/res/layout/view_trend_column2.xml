<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/trend_column_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_frame"
        android:gravity="center"
        android:minHeight="35dp">

        <TextView
            android:id="@+id/trend_column_title"
            style="@style/pick_column_style"
            android:layout_gravity="center"
            android:textColor="@color/app_font_ash_color"
            android:text="@string/is_ssc_shi_title" />

    </RelativeLayout>

    <com.goldenasia.lottery.view.DrawTrendView
        android:id="@+id/trendview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:tr_checkeddrawable="@drawable/bg_special_complete_circle_choose_ball"
        app:tr_titlebackground="@drawable/title_defalut_bg"
        app:tr_horizontalgap="2dp"
        app:tr_verticalgap="2dp"
        app:tr_itemsize="22dp"
        app:tr_maxcopies_x="11"
        app:tr_mincopies_x="1"
        app:tr_isNeedLinkEveryBall="true"
        app:tr_linkBallLineColor="@color/transparent"
        app:tr_numberstyle="false"
        app:tr_textcolor="@color/app_main_background"
        app:tr_textsize="12sp"
        app:tr_rowForColor="@color/app_rowchange_color"
        app:tr_rowForColorDefault="@color/app_rowdefault_color"/>

</LinearLayout>