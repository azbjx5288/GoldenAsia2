<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.goldenasia.lottery.component.TagCloudViewEdit
        android:id="@+id/tag_cloud_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:TCVEBackground="@drawable/edit_style_blue"
        app:TCVEBorder="6dp"
        app:TCVECanTagClick="true"
        app:TCVEItemBorderHorizontal="6dp"
        app:TCVEItemBorderVertical="8dp"
        app:TCVESingleLine="false"
        app:TCVETextColor="@color/colorPrimaryDark"
        app:TCVETextSize="14px" />

</LinearLayout>