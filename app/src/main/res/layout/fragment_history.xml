<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bet_history"
        style="@style/tabUserItemLinearLayout">
        <TextView
            style="@style/tabUserItemText"
            android:drawableLeft="@drawable/touzhu_icon"
            android:text="投注记录"/>
        <ImageView style="@style/tabUserItemImgArrow" />
    </RelativeLayout>

    <View style="@style/horizontal_divide_line" />


    <RelativeLayout
        android:id="@+id/trace_history"
        style="@style/tabUserItemLinearLayout">
        <TextView
            style="@style/tabUserItemText"
            android:drawableLeft="@drawable/zhuihao_icon"
            android:text="追号记录"/>
        <ImageView style="@style/tabUserItemImgArrow" />
    </RelativeLayout>

    <View style="@style/horizontal_divide_line" />


    <RelativeLayout
        android:id="@+id/balance_details"
        style="@style/tabUserItemLinearLayout">
        <TextView
            style="@style/tabUserItemText"
            android:drawableLeft="@drawable/balance_details_icon"
            android:text="资金明细"/>
        <ImageView style="@style/tabUserItemImgArrow" />
    </RelativeLayout>

    <View style="@style/horizontal_divide_line" />

    <RelativeLayout
        android:id="@+id/ga_history"
        style="@style/tabUserItemLinearLayout">
        <TextView
            style="@style/tabUserItemText"
            android:drawableLeft="@drawable/touzhu_icon"
            android:text="GA记录"/>
        <ImageView style="@style/tabUserItemImgArrow" />
    </RelativeLayout>

    <View style="@style/horizontal_divide_line" />
</LinearLayout>


